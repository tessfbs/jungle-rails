<article>
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.thumb.url, alt: product.name %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol product.price %></span>
    </h1>
  <% end %>
  <div>
    <% if product.sold_out? %>
    <div>
      <%= button_to add_item_cart_path(product_id: product.id), class: 'soldout', method: :post, disabled: product.sold_out? do %>
        <%= fa_icon "", text: 'Sold Out' %>
      <% end %>
    </div>
  <% end %>
      <div>
      <%= button_to add_item_cart_path(product_id: product.id), class: 'btn', method: :post, disabled: product.sold_out? do %>
        <%= fa_icon "shopping-cart", text: 'Add' %> 
      <% end %>
    </div>

  </div>
</article>
